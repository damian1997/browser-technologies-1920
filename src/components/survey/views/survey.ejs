<%- include(`${basePartialsPath}/head`) %>
<%- include(`${basePartialsPath}/header`) %>

<main>
  <section id="form-watcher">
    <div class="progress">
      <% const progress = page - 1 %>
      <progress max="<%= questionsAmount %>" value="<%= progress %>">1</progress>
    </div>
    <div id="forms">
      <% if(page === 1) { %>
        <%- include('partials/question1') %>
      <% } %>
      <% if(page === 2) { %>
        <%- include('partials/question2') %>
      <% } %>
      <% if(page === 3) { %>
        <%- include('partials/question3') %>
      <% } %>
      <% if(page === 4) { %>
        <%- include('partials/done') %>
      <% } %>
    </div>
  </section>
</main>

<%- include(`${basePartialsPath}/footer`) %>
<%- include(`${basePartialsPath}/foot`) %>
